{{>navbar message=true }}
<div class="container">
    <a href='/api/allResult' class="btn btn-primary mt-3">Back</a>
    <br><br>

    <div class="d-flex justify-content-center">

        <form action="/api/edit/{{result.id}}" method="post">
            <h1>Edit Record</h1>
            {{#if messages}}     
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>{{this.messages}}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}
            <br><br>

            <div class="form-group row" style="margin-top:10px;">
                <label for="inputPassword" class="col-sm-2 col-form-label">RollNo</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputRollno" name="rollno" placeholder="rollno"
                        value={{result.rollno}} disabled>

                </div>
            </div>
            <div class="form-group row" style="margin-top:10px;">
                <label for="inputPassword" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" placeholder="Name" value={{result.name}}>
                </div>
            </div>
            <div class="form-group row" style="margin-top:10px;">
                <label for="inputPassword" class="col-sm-2 col-form-label">DOB</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="inputRollno" name="dob" placeholder="DOB"
                        value={{result.dob}}>
                </div>
            </div>
            <div class="form-group row" style="margin-top:10px;">
                <label for="inputPassword" class="col-sm-2 col-form-label">Score</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputRollno" name="score" placeholder="score"
                        value={{result.score}}>

                </div>
            </div>
            <br><br>

            <div>
                <button type="submit" class="btn btn-primary">Update</button>
            </div>

        </form>
    </div>
</div>