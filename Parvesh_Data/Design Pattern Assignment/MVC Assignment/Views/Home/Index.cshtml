            <div class="row">
                <div>
                    <h3>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UpcomingEvents" style=" border-block:initial; background-color: azure;margin-top:50px; margin-left: 200px">Upcoming Events</a>
                    </h3>

                </div>
            </div>
            <div class="row">
                <div>
                    <h3>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="PastEvents" style=" border-block:initial;background-color:azure;margin-top:20px;margin-left:200px">Past Events</a>
                    </h3>
                </div>
            </div>
        </div>*@

        <div class="col-sm-4">
            <div class="container">
                <div class="row-sm-6">
                    <div class="row-sm-6" style="margin-left:150px; margin-top:20px;">
                        <div class="card" style="background-color:antiquewhite">
                            <div class="card-body">
                                <h5 class="card-title">Upcoming Events</h5>
                                <p class="card-text">Check Out the Upcoming events</p>
                                <a class="nav-link" href="@Url.Action("UpcomingEvents", "Home")">UpComing Events <span class="sr-only">(current)</span></a>
                            </div>
                        </div>
                    </div>
                    <div class="row-sm-6" style=" margin-left:150px;margin-top:20px;">
                        <div class="card" style="background-color:darkkhaki">
                            <div class="card-body">
                                <h5 class="card-title">Past Events</h5>
                                <p class="card-text">Check out Past Events</p>
                                <a class="nav-link" href="@Url.Action("PastEvents", "Home")">Past Events <span class="sr-only">(current)</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
