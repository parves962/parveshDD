@model EntityModel.SignUpUserModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="row-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Book Reading Application</a>
            <a class="navbar-brand" href="@Url.Action("PublicEvents", "Home")">Public Events</a>
            <form class="form-inline my-2 my-lg-0">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" asp-controller="Home" asp-action="Signup" style="margin-right:20px;">SignUp</button>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" asp-controller="Home" asp-action="Login">Login</button>
            </form>
            <a class="nav-link" style="margin-left:500px;" href="http://helpdesk.nagarro.com">Customer Support</a>
        </nav>
    </div>

    <h4 style="margin-top:20px; margin-left:30px;">Login</h4>
    <hr />
    <div class="row">

        <div class="col-sm-4">
            <div class="container" style="margin-left:10px;">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" asp-controller="Home" asp-action="Login" value="Login" class="btn btn-primary" />
                    </div>

                    <div>
                        <p>Click <a asp-controller="Home" asp-action="SignUp">here </a> to Sign Up</p>
                    </div>

                </form>
            </div>
        </div>
